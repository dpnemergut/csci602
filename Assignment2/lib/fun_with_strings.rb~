#module FunWithStrings
  def palindrome?(str)
	test_str = str
    	test_str.delete!(" ")
	test_str.downcase!
	if test_str == test_str.reverse
	return true
	else
	return false
	end
  end
bool = palindrome?("Race Car")
puts bool
